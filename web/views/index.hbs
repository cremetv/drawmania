<header>
  <div class="site-title">
    Creamy Admin Webinterface
  </div>
  <div class="server-name">
    {{servers.0.name}}
  </div>
</header>


<aside class="sidebar">
  <ul class="server-list">
    <li class="logo {{status}}">
      <a href="/">
        <img src="images/bot-logo.png" alt="Drawmania Logo">
      </a>
      Drawmania
    </li>
    <li class="break"></li>
    {{#each servers}}
    <li>
      <a href="#!" class="server" data-server="{{this.id}}" data-servername="{{this.name}}">
        <img src="https://cdn.discordapp.com/icons/{{this.id}}/{{this.icon}}.png" alt="{{this.name}} Icon">
      </a>
    </li>
    {{/each}}
  </ul>
</aside>


<main>
  <div id="chat" class="chat">

  </div>
</main>


<aside class="stats">
  <div class="stat stat--messages">
    <div class="stat__title">
      Messages
    </div>
    <div class="stat__value">
      0
    </div>
  </div>

  <div class="stat test">
    <div class="stat__title">
      Stat z
    </div>
    <div class="stat__value">
      513
    </div>
  </div>

  <div class="stat stat--error">
    <div class="stat__title">
      Error stat
    </div>
    <div class="stat__value">
      0
    </div>
  </div>

  <div class="stat stat--success">
    <div class="stat__title">
      Success stat
    </div>
    <div class="stat__value">
      16543
    </div>
  </div>
</aside>


<div class="user-profile">
</div>


<div class="user-input">
  <div class="selection">
    <div class="option selection--server">
      <select name="serverId" id="serverId">
        {{#each servers}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="option selection--channel">
      <select name="channelId" id="channelId">
        {{#each channels}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="input-bar">
    <input type="text" id="input" name="input" placeholder="Type something">
    <div class="emoji-wrap">
      <div class="emoji-btn">x</div>
      <div class="emoji-box">
        <ul class="emoji-list">
          <li>1</li>
          <li>2</li>
          <li>3</li>
          <li>4</li>
          <li>5</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="btn-group">
    <a href="#!" class="btn send-btn">send</a>
  </div>
</div>
